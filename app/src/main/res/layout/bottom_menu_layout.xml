        <RadioButton
            android:id="@+id/rb_input"
            style="@style/bottom_button_style"
            android:drawableTop="@drawable/app_67"
            android:text="@string/warehousing_text" />

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/bottom_button_style"
            android:drawableTop="@drawable/app_68"
            android:text="@string/setting_text" />
    </RadioGroup>


